<div class="container">
    <h1 class="text-center">Eat Some Burgers!!!</h1>
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="/assets/images/new-burger-1.png" style="width:300px; height:auto" alt="image-of-burger">
        </div>
        <div class="col-md-12">
            <h2 class="text-center">Insert a Name into the Burger Bar to Add a Burger!</h2>
        </div>
        <br/>
        <h4 class="text-center">Click the "Devour Me!" Button on the side of the Burgers on the left to add them to the Devoured Pile on the right!</h4>
    </div>
    <div class="row">
        <div class="col-md-4" id="burgerPile">
            <h3>The Burgers!</h3>
                {{#each burgers}}
                    {{#unless devoured}}
                        <p>
                            {{id}}. {{burger_name}}
                            <button class="devourMe" data-id="{{id}}">Devour Me!</button>
                        </p>
                    {{/unless}}
                {{/each}}
        </div>
        <div class="col-md-4" id="emptyPile"></div>
        <div class="col-md-4" id="devouredPile">
            <h3>Devoured Pile!</h3>
                {{#each burgers}}
                    {{#if devoured}}
                        <p>
                            <input type="text" placeholder="{{id}}. {{burger_name}}" disabled>
                        </p>
                    {{/if}}
                {{/each}}
        </div>
    </div>
    <div class="text-center">
        <form class="create-form">
            <div class="form-group">
                <label for="burgerName">Add a New Burger Here!</label>
                <input type="text" id="burgerName">
            </div>
            <button type="submit">Add Burger!</button>
        </form>
    </div>
</div>